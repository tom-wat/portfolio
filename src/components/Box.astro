---
import GridWrapper from "./GridWrapper.astro";
import LinkButton from "./LinkButton.astro";
const {
  title,
  description,
  className,
  imgSrc,
  hrefDetail,
  hrefExternal,
} = Astro.props;
---

<GridWrapper
  paddingPC="0"
  columnPC="2"
  gapPC="0"
  paddingTab="0"
  columnTab="2"
  gapTab="0"
  paddingSp="0"
  columnSp="2"
  gapSp="0"
>
  <div class=`${className} top-left box`>
    <div class="title">{title}</div>
  </div>
  <div class=`${className} top-right box`></div>
  <div class=`${className} bottom-left box`>
    {imgSrc && <img src=`${imgSrc}.avif` alt="" />
  }
  </div>
  <div class=`${className} bottom-right box`>
    <div class="description">{description}</div>
    {(hrefDetail || hrefExternal) && <div class="link-area">
      {hrefDetail && <LinkButton href=`${hrefDetail}` text="詳細を見る" iconPath="/portfolio/icons/arrow-right.svg"/>}
      {hrefExternal && <LinkButton href=`${hrefExternal}` text="サイトへ移動する" iconPath="/portfolio/icons/external-link.svg" target="_blank"/>}  
    </div>}
  </div>
</GridWrapper>

<style>
  .box {
    display: grid;
    place-content: center;
    padding: 3rem;
  }
  .title {
    font-size: 2.5rem;
    font-weight: 600;
  }
  .description {
    width: 40ch;
    &:has(+ div){
      margin-bottom: 2rem;
    }
  }
  .bottom-left {
    & img {
      border-radius: 1rem;
    }
  }
  .link-area{
    display: flex;
    gap: 1rem;
  }
  .blue {
    &.top-left {
      color: white;
      background-color: hsl(220, 100%, 39%);
    }
    &.top-right {
      background-color: hsl(200, 100%, 50%);
    }
    &.bottom-left {
      background-color: hsl(190, 100%, 90%);
    }
    &.bottom-right {
      color: white;
      background-color: hsl(220, 100%, 39%);
    }
  }
</style>
