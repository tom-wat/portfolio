---
import Box from "../components/Box.astro";
import Loading from "../components/Loading.astro";
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";
---

<Layout>
  <Loading />
  <body>
    <h1>Portfolio</h1>
    <Box
      title="Watabe Tomonari"
      description="個人的なプロジェクトを公開しています。"
      className="blue"
    />
    <Box
      title="Color Value Drawing"
      description="画像の任意の点の色情報をそのまま画像上に描画するWEBアプリケーション"
      className="blue"
    />
  </body>
</Layout>

<style>
  body {
    opacity: 0;
    &.loaded {
      opacity: 1;
    }
  }
  h1 {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }
</style>
