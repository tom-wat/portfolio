---
import Box from "../components/Box.astro";
import Loading from "../components/Loading.astro";
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";
---

<Layout>
  <body>
    <h1>Portfolio</h1>
    <Box
      title="Watabe Tomonari"
      description="個人的なプロジェクトを公開しています。"
      className="blue"
      isLink={false}
    />
    <Box
      title="Color Value Drawing"
      description="画像の任意の点の色情報をそのまま画像上に描画するWEBアプリケーション"
      className="blue"
      imgSrc="/portfolio/images/color-value-drawing-top"
      hrefDetail="/portfolio/works/color-value-drawing"
      hrefExternal="https://tom-wat.github.io/color-value-drawing/"
    />
    <Box
      title="Length Drawing"
      description="画像の任意の2点間の距離をそのまま画像上に描画するアプリケーション"
      className="blue"
      imgSrc="/portfolio/images/length-drawing-top"
      hrefDetail="/portfolio/works/length-drawing"
      hrefExternal="https://tom-wat.github.io/length-drawing/"
    />
  </body>
  <Loading />
</Layout>

<style>
  body {
    opacity: 0;
    &.loaded {
      opacity: 1;
    }
  }
  h1 {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }
</style>
