---
import Box from "../components/Box.astro";
import Loading from "../components/Loading.astro";
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";
---

<Layout>
  <body>
    <h1>Portfolio</h1>
    <div class="wrapper">
      <Box
        title="Watabe Tomonari"
        description="個人のプロジェクトを公開しています。"
        className="one-blue"
        isLink={false}
      />
      <Box
        title="Color Value Drawing"
        description="画像の任意の点の色情報をそのまま画像上に描画するWEBアプリケーション"
        className="one-blue"
        imgSrc="/images/color-value-drawing"
        hrefDetail="/works/color-value-drawing"
        hrefExternal="https://color-value-drawing.vercel.app/"
      />
      <Box
        title="Length Drawing"
        description="画像の任意の2点間の距離をそのまま画像上に描画するWEBアプリケーション"
        className="one-blue"
        imgSrc="/images/length-drawing"
        hrefDetail="/works/length-drawing"
        hrefExternal="https://length-drawing.vercel.app/"
      />
      <Box
        title="Sunshine Solutions"
        description="太陽を「光とエネルギーを提供する企業」として見立てたウェブサイト。"
        className="one-blue"
        imgSrc="/images/sunshine-solutions"
        hrefDetail="/works/sunshine-solutions"
        hrefExternal="https://sunshine-solutions.vercel.app/"
      />
      <Box
        title="Momo"
        description="ミヒャエル・エンデの小説「モモ」を紹介するアンオフィシャルウェブサイト。"
        className="one-blue"
        imgSrc="/images/momo"
        hrefDetail="/works/momo"
        hrefExternal="https://momo-sage.vercel.app/"
      />
    </div>
  </body>
  <Loading />
</Layout>

<style>
  body {
    background-color: hsl(220, 100%, 39%);
    opacity: 0;
    &.loaded {
      opacity: 1;
    }
  }
  h1 {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }
  .wrapper {
    display: grid;
    gap: 3rem;
  }
</style>
