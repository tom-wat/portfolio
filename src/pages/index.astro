---
import Box from "../components/Box.astro";
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";
---

<Layout>
  <body>
    <h1>Portfolio</h1>
    <Box title="name" description="about" className="blue" />
    <Box title="title" description="description" className="blue" />
